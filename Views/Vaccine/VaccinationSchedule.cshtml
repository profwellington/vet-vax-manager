@{
    ViewData["Title"] = "Cartilha de Vacinação";
    @model List<VetVaxManager.Models.VaccinationSchedule>
    int count = 0;
}

<div class="text-center">
    <h1 class="display-4">Cartilha de Vacinação</h1>
</div>

<div class="container text-center mt-5 mb-4">
    <button id="btnCachorro" class="btn btn-primary me-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Cachorro
    </button>

    <button id="btnGato" class="btn btn-primary me-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Gato
    </button>

    <button id="btnCavalo" class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Cavalo
    </button>
</div>

<div class="accordion" id="accordionCachorro">
    @foreach (var vaccine in Model.Where(s => s.Specie.Name == "Cachorro"))
    {
        count++;

        <div class="accordion-item">
            <h2 class="accordion-header" id="heading-@count">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@count" aria-expanded="false" aria-controls="collapse-@count">
                    @vaccine.Name
                </button>
            </h2>
            <div id="collapse-@count" class="accordion-collapse collapse" aria-labelledby="heading-@count" data-bs-parent="#accordionCachorro">
                <div class="accordion-body">
                    <p><b>Descrição: </b>@vaccine.Description</p>
                    <p><b>Dose: </b>@vaccine.Dose</p>
                    <p><b>Faixa Etária: </b>@vaccine.AgeGroup</p>
                    <p><b>Espécie: </b>@vaccine.Specie.Name</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="accordion d-none" id="accordionGato">
    @foreach (var vaccine in Model.Where(s => s.Specie.Name == "Gato"))
    {
        count++;

        <div class="accordion-item">
            <h2 class="accordion-header" id="heading-@count">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@count" aria-expanded="false" aria-controls="collapse-@count">
                    @vaccine.Name
                </button>
            </h2>
            <div id="collapse-@count" class="accordion-collapse collapse" aria-labelledby="heading-@count" data-bs-parent="#accordionGato">
                <div class="accordion-body">
                    <p><b>Descrição: </b>@vaccine.Description</p>
                    <p><b>Dose: </b>@vaccine.Dose</p>
                    <p><b>Faixa Etária: </b>@vaccine.AgeGroup</p>
                    <p><b>Espécie: </b>@vaccine.Specie.Name</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="accordion d-none" id="accordionCavalo">
    @foreach (var vaccine in Model.Where(s => s.Specie.Name == "Cavalo"))
    {
        count++;

        <div class="accordion-item">
            <h2 class="accordion-header" id="heading-@count">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@count" aria-expanded="false" aria-controls="collapse-@count">
                    @vaccine.Name
                </button>
            </h2>
            <div id="collapse-@count" class="accordion-collapse collapse" aria-labelledby="heading-@count" data-bs-parent="#accordionCavalo">
                <div class="accordion-body">
                    <p><b>Descrição: </b>@vaccine.Description</p>
                    <p><b>Dose: </b>@vaccine.Dose</p>
                    <p><b>Faixa Etária: </b>@vaccine.AgeGroup</p>
                    <p><b>Espécie: </b>@vaccine.Specie.Name</p>
                </div>
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const btnCachorro = document.getElementById("btnCachorro");
        const btnGato = document.getElementById("btnGato");
        const btnCavalo = document.getElementById("btnCavalo");
        const accordionCachorro = document.getElementById("accordionCachorro");
        const accordionGato = document.getElementById("accordionGato");
        const accordionCavalo = document.getElementById("accordionCavalo");

        btnCachorro.addEventListener("click", function () {
            accordionCachorro.classList.remove("d-none");
            accordionGato.classList.add("d-none");
            accordionCavalo.classList.add("d-none");
        });

        btnGato.addEventListener("click", function () {
            accordionCachorro.classList.add("d-none");
            accordionGato.classList.remove("d-none");
            accordionCavalo.classList.add("d-none");
        });

        btnCavalo.addEventListener("click", function () {
            accordionCachorro.classList.add("d-none");
            accordionGato.classList.add("d-none");
            accordionCavalo.classList.remove("d-none");
        });
    });
</script>